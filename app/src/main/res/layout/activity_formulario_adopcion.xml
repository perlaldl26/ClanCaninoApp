<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/clancanino"
        android:layout_marginBottom="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_form"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        >

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:height="@dimen/cardview_default_elevation"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:ems="10"
            android:hint="Nombre Completo"
            android:inputType=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:backgroundTint="@color/underline" />

        <EditText

            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:height="@dimen/cardview_default_elevation"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:ems="10"
            android:hint="Correo Electronico"
            android:inputType="none"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/underline_dott"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/editEdad"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:height="@dimen/cardview_default_elevation"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:ems="10"
                android:layout_weight="1"
                android:hint="Edad"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:backgroundTint="@color/underline" />

            <EditText
                android:id="@+id/numeroMasc"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:height="@dimen/cardview_default_elevation"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:ems="10"
                android:layout_weight="1"
                android:hint="# de Mascotas"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:backgroundTint="@color/underline" />
        </LinearLayout>
        <EditText
            android:id="@+id/editCedula"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:height="@dimen/cardview_default_elevation"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:ems="10"
            android:hint="Cedula"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/underline_dott" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/editCelular"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:height="@dimen/cardview_default_elevation"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:ems="10"
                android:layout_weight="1"
                android:hint="Celular"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:backgroundTint="@color/underline" />

            <EditText
                android:id="@+id/editTelefono"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:height="@dimen/cardview_default_elevation"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:ems="10"
                android:layout_weight="1"
                android:hint="Telefono"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:backgroundTint="@color/underline" />


        </LinearLayout>

        <EditText
            android:id="@+id/editDirección"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:height="@dimen/cardview_default_elevation"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:ems="10"
            android:hint="Dirección"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/underline_dott" />


        <Button
            android:id="@+id/buttonIngresar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Registrar"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:onClick="registrar"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_style"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>



    </ScrollView>

</LinearLayout>
